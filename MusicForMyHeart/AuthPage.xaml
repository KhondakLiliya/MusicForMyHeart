<Window x:Class="MusicForMyHeart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicForMyHeart"
        mc:Ignorable="d"
        Title="Authorization" Height="350" Width="400.887">
    <Window.Background>
        <ImageBrush ImageSource="muz_7.jpg" Stretch="UniformToFill" TileMode="None" />
    </Window.Background>
    <Grid Margin="0,0,0,0">
        <Button Name ="LoginButton" Content="Log in" HorizontalAlignment="Left" Height="36" Margin="125,187,0,0" VerticalAlignment="Top" Width="150" FontSize="20" Click="LoginButton_Click" FontFamily="Georgia" FontWeight="Bold"/>
        <Label Content="Login" Foreground="White" HorizontalAlignment="Left" Height="35" Margin="50,62,0,0" VerticalAlignment="Top" Width="74" FontSize="18" FontFamily="Georgia" FontWeight="Bold"/>
        <Label Content="Password" Foreground="White" HorizontalAlignment="Left" Height="35" Margin="35,117,0,0" VerticalAlignment="Top" Width="103" FontSize="18" FontFamily="Georgia" FontWeight="Bold"/>
        <PasswordBox Name="passwordbox" HorizontalAlignment="Left" Height="35" Margin="152,117,0,0" VerticalAlignment="Top" Width="179"/>
        <TextBox Name="logintextbox" HorizontalAlignment="Left" Height="35" Margin="152,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
        <Button  Click="Button_Click" Content="Create" HorizontalAlignment="Left" Height="42" Margin="58,251,0,0" VerticalAlignment="Top" Width="66" FontFamily="Georgia" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Name="IDTextBox" Height="27" Margin="152,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68"/>
        <Button Click="Button_Click1" Content="Delete" HorizontalAlignment="Left" Height="42" Margin="275,251,0,0" VerticalAlignment="Top" Width="71" FontFamily="Georgia" FontWeight="Bold"/>
        <Button Click="Button_Click2" Content="Update" HorizontalAlignment="Left" Height="42" Margin="166,251,0,0" VerticalAlignment="Top" Width="64" FontFamily="Georgia" FontWeight="Bold"/>

    </Grid>
</Window>
